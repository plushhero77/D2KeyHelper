<Window x:Class="D2KeyHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D2KeyHelper"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource VMLocator},Path=mainVM}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label HorizontalAlignment="Left" FontSize="18" Content="{Binding D2ProcStatus}"/>
            <StackPanel Orientation="Horizontal">
                <Button Margin="10" VerticalAlignment="Top" Height="30" Content="Start KeyHelper" Command="{Binding StartLIstener}"/>
                <Button Margin="10" VerticalAlignment="Top" Height="30" Content="Key Binding Set" Command="{Binding StartLIstener}"/>
            </StackPanel>
        </StackPanel>
        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" Content="{}"/>


    </Grid>
</Window>
